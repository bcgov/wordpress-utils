{
    "name": "bcgov/wordpress-scripts",
    "version": "2.0.2",
    "require": {
        "php": ">=7.4",
        "composer/installers": "~1.0",
        "wp-coding-standards/wpcs": "^3.0.1",
        "phpunit/phpunit": "^9.5",
        "brain/monkey": "^2.6"
    },

    "autoload": {
        "psr-4": {
            "Bcgov\\Script\\": "src/"
        }

    },
    "scripts": {

        "phpcs": [
            "./vendor/bin/phpcs --config-set --config-set error_severity 1 -i;",
            "./vendor/bin/phpcs -ps --colors ./ &2>/dev/null;"
        ],
        "phpcbf": [
            "./vendor/bin/phpcbf -ps --colors ./ &2>/dev/null;"
        ],
        "test": [
            "./vendor/bin/phpunit"
        ],
        "coverage": [
            "./vendor/bin/phpunit --coverage-html ./coverage/php/"
        ],
        "checklist": [
            "Bcgov\\Script\\Checklists::postProductionChecksForScripts"
        ]

    },
    "config": {
        "allow-plugins": {
            "composer/installers": false,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require-dev": {
        "phpcsstandards/phpcsutils": "^1.0"
    }
}
